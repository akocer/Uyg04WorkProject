@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-8">
        <h2 class="h3 mb-4 text-gray-800">İş Kayıtları</h2>
        <table class="table" id="tbWorkList">
            <thead>
                <tr>
                    <th>SN</th>
                    <th>Başlık</th>
                    <th>Skor</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h2 class="h3 mb-4 text-gray-800">İş Ekle - Düzenle</h2>
        <div class="mb-2">
            <label>Başlık</label>
            <input type="text" class="form-control" id="txtTitle" />
        </div>
        <div class="mb-2">
            <label>Açıklama</label>
            <textarea type="text" rows="3" class="form-control" id="txtDescription"></textarea>
        </div>
        <div class="mb-2">

            <a id="btnCancel" class="btn btn-danger btn-circle" title="Vazgeç"><i class="fas fa-arrow-left"></i></a>
            <a id="btnSave" class="btn btn-primary btn-circle ml-1" title="Kaydet"><i class="fas fa-save"></i></a>
        </div>

        <div class="alert" id="divResult"></div>
    </div>
</div>




@section Scripts{
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            var token = localStorage.getItem("token");
            if (token == "" || token == null) {
                location.href = "/Home/Login";
                return false;
            }

            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            GetWorkList();



            $("#tbWorkList tbody").sortable({
                placeholder: "bg-secodary",
                axis: "y",
                handle: '.move',
                cancel: '',
                update: function (event, ui) {
                    var ids = new Array();

                    $("#tbWorkList tbody tr").each(function () {
                        ids.push($(this).attr("id"));
                        MenuSort(ids);
                    });
                }
            });



            $("#btnSave").click(function () {
                var title = $("#txtTitle").val();
                var description = $("#txtDescription").val();
                if (title == "" || description == "") {
                    $("#divResult")
                        .show()
                        .removeClass()
                        .addClass("alert alert-danger")
                        .html("Tüm Alanları Doldurunuz!")
                        .fadeOut(5000);
                    return false;
                }
                var work = new Object();
                work.Title = title;
                work.Description = description;

                $.ajax({
                    url: ApiBaseUrl + "Work",
                    method: "POST",
                    data: JSON.stringify(work),
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        if (data.status) {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-success")
                                .html(data.message)
                                .fadeOut(5000);
                            GetWorkList();
                        } else {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message)
                                .fadeOut(5000);
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });

            });






            function GetWorkList() {
                $.ajax({
                    url: ApiBaseUrl + "Work",
                    method: "GET",
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        WorkDataToTable(data);
                    },
                    error: function () { }
                });
            }

            function WorkDataToTable(data) {
                console.log(data);
                var tr = "";
                $.each(data, function (i, item) {
                    tr += `<tr>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <td>${(i + 1)}</td>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <td>${item.title}</td>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <td>${item.score}</td>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            <td>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            <a href="#" class="btn btn-primary btn-circle move" title="Taşı">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <i class="fas fa-arrows"></i>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </a>                                                                                             <a href="/Home/WorkSteps/${item.id}" class="btn btn-primary btn-circle" title="Detay">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <i class="fas fa-search"></i>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </a>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <a href="#" class="btn btn-primary btn-circle" title="Düzenle">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <i class="fas fa-pencil"></i>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </a>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <a href="#" class="btn btn-danger btn-circle" title="Sil">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <i class="fas fa-trash"></i>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </a>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            </td>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </tr>`;
                });
                $("#tbWorkList tbody").empty();
                $("#tbWorkList tbody").append(tr);
            }

        });
    </script>
}